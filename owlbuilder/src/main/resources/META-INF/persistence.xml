<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>org.arachb.arachadmin.Taxon</class>
        <class>org.arachb.arachadmin.OntologySource</class>
        <class>org.arachb.arachadmin.Publication</class>
        <class>org.arachb.arachadmin.Taxon</class>
        <class>org.arachb.arachadmin.Author</class>
        <class>org.arachb.arachadmin.Narrative</class>
        <class>org.arachb.arachadmin.Property</class>
        <class>org.arachb.arachadmin.BehaviorPhenotype</class>
        <class>org.arachb.arachadmin.Event</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/testadmin"/>
            <property name="jakarta.persistence.jdbc.user" value="arachadmin"/>
            <property name="jakarta.persistence.jdbc.password" value="abc123"/>
            <property name="connection.pool_size" value="30"/>

        </properties>
    </persistence-unit>
</persistence>
